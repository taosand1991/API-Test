{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "overrides": [
        {
            "files":["./src/**/*", "./types/**/*", ".test/**/*"]
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [ "./tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "comma-style":"error",
        "array-bracket-spacing":"error",
        "arrow-spacing":"error",
        "camelcase":"error",
        "block-spacing":"error",
        "indent":"error",
        "no-empty":"error",
        "no-var":"error",
        "no-implicit-coercion":"error",
        "quotes":["error", "single", {"allowTemplateLiterals": true}]
    }
}
